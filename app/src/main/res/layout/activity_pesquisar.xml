<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.tiberio.fechamentoexterno.atividades.Pesquisar">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="586dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/txtTituloFE"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/home_search"
            android:layout_marginLeft="-100dp"
            android:background="@color/color_fundo_titulo_fechaexterno"
            android:gravity="left|center"
            android:text="Fechamento Externo"
            android:textAlignment="center"
            android:textColor="@color/color_titulo_fechaexterno"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/home_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:layout_above="@+id/listview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:hint="Digite o termo a ser pesquisado"
            android:imeActionLabel="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="@color/ciano_500"
            android:textColorLink="@color/ciano_500"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/id_botao_voltar2"
            android:layout_width="100dp"
            android:layout_height="36dp"

            android:layout_alignEnd="@+id/txtTituloFE"
            android:layout_alignRight="@+id/txtTituloFE"
            android:layout_below="@+id/listview"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="21dp"
            android:background="@color/color_branco"
            android:elevation="13dp"
            android:minWidth="64dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/botao_voltar"
            android:textColor="@color/color_roxo_nivel"
            android:visibility="visible"
            tools:ignore="HardcodedText" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
