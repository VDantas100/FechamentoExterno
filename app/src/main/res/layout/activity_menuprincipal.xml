<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.tiberio.fechamentoexterno.atividades.Menuprincipal">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
             />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_menuprincipal" />

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="570dp">


        <Button
            android:id="@+id/btn_menu_empreendimentos"

            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_above="@+id/btn_menu_marketing"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:background="@color/color_branco"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/menu_nome_empreendimentos"
            android:textColor="@color/color_cinza_menu" />

        <Button
            android:id="@+id/btn_menu_marketing"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_above="@+id/btn_menu_outrascategorias"
            android:layout_alignLeft="@+id/btn_menu_empreendimentos"
            android:layout_alignStart="@+id/btn_menu_empreendimentos"
            android:layout_marginBottom="23dp"
            android:background="@color/color_branco"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/menu_nome_marketing"
            android:textColor="@color/color_cinza_menu" />

        <Button
            android:id="@+id/btn_menu_outrascategorias"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/color_branco"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/menu_nome_outrascategorias"
            android:textColor="@color/color_cinza_menu" />

        <Button
            android:id="@+id/btn_menu_pesquisar"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_menu_marketing"
            android:layout_marginTop="52dp"
            android:background="@color/color_branco"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/menu_nome_pesquisar"
            android:textColor="@color/color_cinza_menu" />

        <TextView
            android:id="@+id/txtTituloPrincipal"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_menu_empreendimentos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="8sp"
            android:text="Selecione a opção de Pesquisa"
            android:textColor="@color/color_cinza_menu"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtTituloFE2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="59dp"
            android:background="@color/color_fundo_titulo_fechaexterno"
            android:foregroundGravity="center_horizontal|center"
            android:gravity="left|center"
            android:text="Fechamento Externo"
            android:textAlignment="center"
            android:textColor="@color/color_titulo_fechaexterno"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
